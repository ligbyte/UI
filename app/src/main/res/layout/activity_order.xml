<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签收确认"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Order Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_8dp"
                android:padding="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单时间：2025-09-22 18:35:36"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="供货单位：河南中农食品集团有限公司"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Products List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_header"
            android:layout_above="@+id/ll_bottom"
            android:layout_marginBottom="24dp" />

        <!-- Summary Section -->
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow_top"
            android:padding="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:elevation="8dp">

            <!-- Statistics -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品数量：3"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="32dp" />

                <TextView
                    android:id="@+id/tv_verified_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签收数量：2"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="32dp" />

                <TextView
                    android:id="@+id/tv_return_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退货数量：1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="48dp" />

                <TextView
                    android:id="@+id/tv_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单总额：¥799.66"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="32dp" />

                <TextView
                    android:id="@+id/tv_verified_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复核总额：¥599.66"
                    android:textColor="@color/button_blue"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- Confirm Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                android:layout_width="160dp"
                android:layout_height="56dp"
                android:background="@drawable/button_background"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
