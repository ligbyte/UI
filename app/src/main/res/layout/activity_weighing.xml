<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/scale_background"
    android:screenOrientation="landscape"
    tools:context=".WeighingActivity">

    <!-- Left Side - Scale Display -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">

        <!-- Scale Circle Container -->
        <FrameLayout
            android:layout_width="900dp"
            android:layout_height="900dp"
            android:layout_gravity="center">

            <!-- Custom Java-drawn Scale Dashboard -->
            <com.example.ui.ScaleDashboardView
                android:id="@+id/scale_dashboard"
                android:layout_width="900dp"
                android:layout_height="900dp"
                android:layout_gravity="center" />

            <!-- Center Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/net_weight"
                    android:textSize="42sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_weight_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.000 kg"
                    android:textSize="54sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Mode Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_stable"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/stable"
                android:textSize="14sp"
                android:background="@drawable/mode_button_selector"
                android:layout_marginRight="20dp" />

            <Button
                android:id="@+id/btn_net"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/net_weight"
                android:textSize="14sp"
                android:background="@drawable/mode_button_selector"
                android:layout_marginRight="20dp" />

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/zero"
                android:textSize="14sp"
                android:background="@drawable/mode_button_selector" />

        </LinearLayout>

        <!-- Weight Display Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <!-- Tare Weight -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/weight_display_background"
                android:padding="15dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tare_weight"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@color/text_gray"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tv_tare_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.000 kg"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <!-- Gross Weight -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/weight_display_background"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gross_weight"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@color/text_gray"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tv_gross_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.000 kg"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Right Side - Input Panel -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="40dp"
        android:background="@color/keypad_background">

        <!-- Price Display Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/price_display_background"
            android:padding="20dp"
            android:layout_marginBottom="30dp">

            <!-- Unit Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_price"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_unit_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_kg"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <!-- Total Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_price"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_yuan"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Numeric Keypad -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="3"
            android:rowCount="4"
            android:layout_marginBottom="20dp">

            <!-- Row 1: 1, 2, 3 -->
            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="1"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="2"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="3"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <!-- Row 2: 4, 5, 6 -->
            <Button
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="4"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="5"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="6"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <!-- Row 3: 7, 8, 9 -->
            <Button
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="7"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="8"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="9"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <!-- Row 4: 0, ., X -->
            <Button
                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="0"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="."
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="2dp"
                android:text="X"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:background="@drawable/keypad_button_background" />

        </GridLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_tare_action"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="@string/btn_tare"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/button_background" />

            <Button
                android:id="@+id/btn_zero_action"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="@string/btn_zero"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/button_background" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>